{
    "version": 2,
    "name": "devlounge",
    "builds": [
      {
        "src": "frontend/vite.config.js",
        "use": "@vercel/static-build",
        "config": { "distDir": "frontend/dist" }
      },
      {
        "src": "user-service/index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/user-service/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/dist/index.html"
      }
    ]
  }
  